//- @example +checkbox
//- @example +checkbox()(checked)
//- @example +checkbox()(disabled)
//- @example +checkbox()(checked, disabled)
//- @param {string} [label]
mixin checkbox(label)
  .checkbox
    input.checkbox__element(type='checkbox', aria-label=label)&attributes(attributes)
    +icon('check').checkbox__icon(width='24', height='24')
