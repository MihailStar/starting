//- @example +radio()(name=getRandomDoubleId())
//- @example +radio()(name=getRandomDoubleId(), checked)
//- @example +radio()(name=getRandomDoubleId(), disabled)
//- @example +radio()(name=getRandomDoubleId(), checked, disabled)
//- @param {string} [label]
mixin radio(label)
  .radio
    input.radio__element(type='radio', aria-label=label)&attributes(attributes)
    +icon('checkbox-blank-circle-outline').radio__icon(
      width='24',
      height='24'
    )
