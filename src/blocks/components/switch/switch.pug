//- @example +switch
//- @example +switch()(checked)
//- @example +switch()(disabled)
//- @example +switch()(checked, disabled)
//- @param {string} [label]
mixin switch(label)
  .switch
    input.switch__element(type='checkbox', aria-label=label)&attributes(attributes)
    +icon('checkbox-blank-circle-outline').switch__icon(
      width='32',
      height='32'
    )
