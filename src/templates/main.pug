include ../blocks/components/modal/modal.pug
include ../blocks/components/textarea/textarea.pug

block variables

doctype html
html.no-js(lang=typeof documentLanguage === 'string' ? documentLanguage : 'ru')
  head
    title= pageTitle
    meta(charset='utf-8')
    if typeof pageDescription === 'string'
      meta(name='description', content=pageDescription)
    if typeof pageKeywords === 'string'
      meta(name='keywords', content=pageKeywords)
    meta(name='format-detection', content='email=no')
    meta(name='format-detection', content='telephone=no')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    block head
    link(href='./styles/main.css', rel='stylesheet')

  body(class=bodyClasses)
    script(type='module').
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    block body
    script(src='./scripts/main.js', defer)
